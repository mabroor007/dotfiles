#!/usr/bin/node
const { run, runc, prun } = require("./myutils.js");

// for backup
if (process.argv[2] == "backup") {
  prun("cp ~/.vimrc ~/dotfiles/.vimrc")
    .then(() => prun("cp ~/.vimrc ~/dotfiles/.vimrc"))
    .then(() => prun("cp ~/.vimrc ~/dotfiles/.vimrc"))
    .then(() => prun("cp ~/.bashrc ~/dotfiles"))
    .then(() => prun("cp -r ~/.config/alacritty ~/dotfiles"))
    .then(() => prun("cp -r ~/.i3 ~/dotfiles"))
    .then(() => prun("cp -r ~/.vim/snippets ~/dotfiles/.vim"))
    .catch((e) => console.log(e));
}

// for seting the configuration
if (process.argv[2] == "do") {
  run("cp ~/dotfiles/.bashrc ~/");
  run("cp ~/dotfiles/.vimrc ~/.vimrc");
  run("cp -r ~/dotfiles/alacritty ~/.config");
  run("cp -r ~/dotfiles/.i3 ~");
  run("mkdir ~/.vim/snippets");
  run("cp -r ~/dotfiles/.vim/snippets ~/.vim");
}
